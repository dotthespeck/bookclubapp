<%= form_for([@book, @topic]) do |f| %>

<% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{@topic.errors.count} error(s) prevented the topic from being saved:" %></h2>
      <ul>
        <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="field">
  <%= f.label :title, "Title" %><br />
  <%= f.text_field :title %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
