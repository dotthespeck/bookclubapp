<div id="header">
  <%= image_tag "hand_left.jpg", class: 'left_hand' %>
<h1 class="welcome">Welcome to Book Club</h1>
  <%= image_tag "hand_right.jpg", class: 'right_hand' %>
</div>

<div>
  <h3 class="spacing">Brought to you by the Rochester-Portland Correspondence Society</h3>
</div>

<div id="featured_book">
<h1>Currently Reading...</h1>
<ul>
  <% @featured_book.each do |book| %>
  <li><a id="cover" href="/books/<%=book.id %>"><img src="<%= book.book_cover %>">"</a></li>
</ul>
<% end %>
</div>

<div id="other_books">
<div class="future">
  <h1>Coming Up</h1>
  <% @future_books.each do |book| %>
  <ul>
    <li><a class="books_index" href="/books/<%=book.id %>"><%=book.author%>: <%= book.title %></a></li>
  </ul>
  <% end %>
</div>

<div class="past">
<h1>Past Books</h1>
<% @past_books.each do |book| %>
<ul>
  <li><a class="books_index" href="/books/<%=book.id %>"><%=book.author%>: <%= book.title %></a></li>
</ul>
<% end %>
</div>

<h3><a class="add_new_book" href="<%= new_book_path %>">Add a book</a></h3>
</div>
