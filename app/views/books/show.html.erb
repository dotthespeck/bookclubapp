<div class="content">
  <img src="<%= @book.book_cover %>">
  <h1><%= @book.title %></h1>
  <h2><%= @book.author %></h2
</div>

  <h2>Discussions</h2>
    <% @topics.each do |t| %>
      <h3><a id="topic" href="<%=book_topic_path(@book.id, t.id)%>"><%= t.title %></a></h3>
      <% comment = t.comments.last%>
      <% if comment %>
        <h3><%= comment.comment %>
      <% end %>
      <h5><a href="<%=edit_book_topic_path(@book.id, t.id)%>">Edit topic</a></h5>
    <% end %>

<a id="new_topic" href="<%=new_book_topic_path(@book.id)%>">Add a topic</a>
<a id="edit" href="/books/<%=@book.id%>/edit">Edit Book Information</a>
